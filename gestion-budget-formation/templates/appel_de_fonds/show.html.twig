{% extends 'base.html.twig' %}

{% block title %}Détails de l'Appel de Fonds{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Détails de l'Appel de Fonds</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>projet</th>
                    <td>{{ appel_de_fond.projet.nom }}</td>
                </tr>
                <tr>
                    <th>Montant demandé</th>
                    <td>{{ appel_de_fond.montantdemande }}</td>
                </tr>
                <tr>
                    <th>Date de demande</th>
                    <td>{{ appel_de_fond.datedemande ? appel_de_fond.datedemande|date('d/m/Y') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-3">
            <a href="{{ path('app_appel_de_fonds_index') }}" class="btn btn-secondary">Retour à la liste</a>
            <a href="{{ path('app_appel_de_fonds_edit', {'appelid': appel_de_fond.appelid}) }}" class="btn btn-warning">Modifier</a>
        </div>

        <div class="mt-3">
            {{ include('appel_de_fonds/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
