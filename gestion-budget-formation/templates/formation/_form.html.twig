{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="card-title">
                <i class="fas fa-edit me-2"></i> Informations de la formation
            </h5>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        {{ form_label(form.session, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.session, {'attr': {'class': 'form-select'}}) }}
                        <div class="form-text text-muted">
                            <small><i class="fas fa-info-circle me-1"></i> Sélectionnez la session associée à cette formation.</small>
                        </div>
                        {{ form_errors(form.session) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        {{ form_label(form.organisme, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.organisme, {'attr': {'class': 'form-control', 'placeholder': 'Ex: AFPA, Simplon, etc.'}}) }}
                        <div class="form-text text-muted">
                            <small><i class="fas fa-info-circle me-1"></i> Indiquez le nom de l'organisme de formation.</small>
                        </div>
                        {{ form_errors(form.organisme) }}
                    </div>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        {{ form_label(form.couht, null, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            {{ form_widget(form.couht, {'attr': {'class': 'form-control'}}) }}
                            <span class="input-group-text"><i class="fas fa-euro-sign"></i></span>
                        </div>
                        {{ form_errors(form.couht) }}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        {{ form_label(form.tauxtva, null, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            {{ form_widget(form.tauxtva, {'attr': {'class': 'form-control'}}) }}
                            <span class="input-group-text"><i class="fas fa-percent"></i></span>
                        </div>
                        {{ form_errors(form.tauxtva) }}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        {{ form_label(form.dateformation, null, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            {{ form_widget(form.dateformation, {'attr': {'class': 'form-control'}}) }}
                            <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                        </div>
                        {{ form_errors(form.dateformation) }}
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card-footer bg-light d-flex justify-content-between align-items-center">
            <a href="{{ path('app_formation_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Retour à la liste
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-1"></i> {{ button_label|default('Enregistrer') }}
            </button>
        </div>
    </div>
{{ form_end(form) }} 