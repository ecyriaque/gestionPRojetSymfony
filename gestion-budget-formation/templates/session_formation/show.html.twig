{% extends 'base.html.twig' %}

{% block title %}Détails de la session de formation{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Détails de la session de formation</h1>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row">Identifiant</th>
                            <td>{{ session_formation.sessionid }}</td>
                        </tr>
                        <tr>
                            <th scope="row">projet</th>
                            <td>{{ session_formation.projet.nom }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Date de début</th>
                            <td>{{ session_formation.datedebut ? session_formation.datedebut|date('d/m/Y') : '' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Date de fin</th>
                            <td>{{ session_formation.datefin ? session_formation.datefin|date('d/m/Y') : '' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Coût total</th>
                            <td>{{ session_formation.couttotal | number_format(2, ',', ' ') }} €</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3 d-flex justify-content-between">
            <a href="{{ path('app_session_formation_index') }}" class="btn btn-secondary btn-lg">Retour à la liste</a>
            <a href="{{ path('app_session_formation_edit', {'sessionid': session_formation.sessionid}) }}" class="btn btn-warning btn-lg">Modifier</a>
        </div>

        <div class="mt-3">
            {{ include('session_formation/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
