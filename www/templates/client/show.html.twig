{% extends 'base.html.twig' %}

{% block title %}Client Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Détails du Client</h1>

        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Informations du Client</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Client ID</th>
                            <td>{{ client.clientid }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ client.nom }}</td>
                        </tr>
                        <tr>
                            <th>Siren</th>
                            <td>{{ client.siren }}</td>
                        </tr>
                        <tr>
                            <th>IBAN</th>
                            <td>{{ client.iban }}</td>
                        </tr>
                        <tr>
                            <th>Adresse</th>
                            <td>{{ client.adresse }}</td>
                        </tr>
                        <tr>
                            <th>Commission</th>
                            <td>{{ client.commission }}</td>
                        </tr>
                        <tr>
                            <th>Email de Contact</th>
                            <td>{{ client.emailcontactfacturation }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('app_client_index') }}" class="btn btn-secondary">Retour à la liste</a>
            <a href="{{ path('app_client_edit', {'clientid': client.clientid}) }}" class="btn btn-warning">Modifier</a>
        </div>

        {{ include('client/_delete_form.html.twig') }}
    </div>
{% endblock %}
